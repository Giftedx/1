# Discord Configuration
BOT_TOKEN=your_discord_bot_token
STREAMING_BOT_TOKEN=your_streaming_selfbot_token  # For selfbot media streaming
VOICE_CHANNEL_ID=your_voice_channel_id
COMMAND_PREFIX=!
ADMIN_ROLE_ID=your_admin_role_id

# Service Configuration
SERVICE_MODE=bot  # Options: bot, selfbot, or combined
LOG_LEVEL=INFO
PLEX_URL=http://your-plex-server:32400
PLEX_TOKEN=your_plex_token

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_strong_redis_password
REDIS_POOL_MIN_SIZE=5
REDIS_POOL_MAX_SIZE=20
REDIS_POOL_TIMEOUT=30

# FFmpeg Configuration 
FFMPEG_THREAD_QUEUE_SIZE=512
FFMPEG_HWACCEL=auto  # Options: auto, none, nvenc, qsv
FFMPEG_PRESET=veryfast
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720

# Performance & Scaling
WORKER_PROCESSES=2
MAX_CONCURRENT_STREAMS=100
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring & Metrics
ENABLE_METRICS=true
PROMETHEUS_RETENTION_DAYS=15
OTEL_TRACE_SAMPLING_RATE=0.1
METRICS_PORT=9090

# Security
ENABLE_SECURITY_HEADERS=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Vault Integration (Optional)
VAULT_ADDR=https://your-vault-server:8200
VAULT_TOKEN=your_vault_token
VAULT_PATH=secret/discord-bot

# Webserver Configuration
WEB_SERVER_PORT=80
